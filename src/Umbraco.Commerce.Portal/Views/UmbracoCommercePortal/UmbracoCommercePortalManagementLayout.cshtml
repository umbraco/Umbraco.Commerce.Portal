@using Umbraco.Commerce.Portal.Extensions;
@inherits UmbracoViewPage
@{
	Layout = null;

	var themeColor = Model.GetThemeColor();
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@Model.Name</title>
	<link rel="stylesheet" href="/App_Plugins/UmbracoCommercePortal/umbraco-commerce-portal.css" />

	<style>
		.ucp-text-color {
			color: @(themeColor);
		}

		.ucp-bg-color {
			background-color: @(themeColor);
		}
	</style>
</head>
<body>
	<div class="portal">
		<!-- Sidebar Block -->
		@await Html.PartialAsync($"{UmbracoCommercePortalConstants.UmbracoCommercePortalViewPath}/Partials/UmbracoCommercePortalManagementSidebar.cshtml")

		<!-- Main Content Block -->
		<main class="main">
			@RenderBody()
		</main>
	</div>
</body>
</html>
